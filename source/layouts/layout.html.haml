!!!
%html

  %head
    %title Portland Code School

    %meta{:charset => "utf-8"}
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %meta{:name => "description", :content => @meta_description || "The Portland Code School is an intensive 12-week course focused on teaching the essential skills necessary to begin working as a junior programmer upon graduation."}
    %meta{:name => "keywords", :content => @meta_keywords || "portland,code,school,pdxcodeschool,ruby,rails,sinatra,students,education" }

    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    %link{:rel => "stylesheet", :href => "/stylesheets/site.css"}

  %body{:lang => "en", :id => "page-#{@body_id}"}
    %a#top
    %header
      %div.logo
        %a{:href => "/"}
          %img{:src => "/images/orange_rose_transparent.png", :alt => "Portland Code School"}
          %h1
            .logo-text-top Portland
            .logo-text-bottom Code School

      %nav.site_nav
        %ul
          %li
            %a{:href => "/"}Home
          %li
            %a{:href => "/program.html"}Program
          %li
            %a{:href => "/hire.html"}Employers
          %li
            %a{:href => "/community.html"}Community
          %li
            %a.button.apply{:href => "/apply.html"}Apply Now

    = yield

    %footer.foot
      %section.width
        #mc_embed_signup
          %h3 Mailing List
          %form{:action => "http://chuckvose.us1.list-manage.com/subscribe/post?u=bf62c907d00a592feb0eb305f&amp;id=50dbf0b987", :method => "post", :id => "mc-embedded-subscribe-form", :name => "mc-embedded-subscribe-form", :class => "validate", :target => "_blank" }
            .mc-field-group
              %input{:type => "email", :value => "", :name => "EMAIL", :placeholder => "Email Address", :class => "required email", :id => "mce-EMAIL"}
              %input{:type => "submit", :name => "subscribe", :id => "mc-embedded-subscribe", :class => "button", :value => "Subscribe"}
        %div.centered
          %h3 Links
          %ul
            %li
              %a{:href => "about.html"}About
            %li
              %a{:href => "faq.html"}Questions
            %li
              %a{:href => "http://www.github.com/portlandcodeschool"}Github

        %div.last
          %h3 Contact Us
          %p
            %a{:href => "mailto:info@portlandcodeschool.com"}info@portlandcodeschool.com
          %p 503-367-6226
          #social_row
            %a{:href => "http://www.facebook.com/PortlandCodeSchool"}
              %img{:src => "/images/icons/facebook.png"}
            %a{:href => "http://www.twitter.com/pdxcodeschool"}
              %img{:src => "/images/icons/twitter.png"}
            %a{:href => "mailto:info@portlandcodeschool.com"}
              %img{:src => "/images/icons/mail.png"}

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-37234345-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

